{
  "name": "b-transfer",
  "version": "2.3.0",
  "description": "Ultra-fast file transfer with military-grade security",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-mac": "electron-builder --mac",
    "build-win": "electron-builder --win",
    "build-linux": "electron-builder --linux"
  },
  "keywords": [
    "file-transfer",
    "security",
    "encryption",
    "cloud-storage"
  ],
  "author": "Balsim Technologies",
  "license": "Copyright (c) 2025 Balsim Technologies. All rights reserved.",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.balsimtech.btransfer",
    "productName": "B-Transfer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "b_transfer_ui.html",
      "b_transfer_server.py",
      "cloud_storage.py",
      "requirements.txt",
      "uploads/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
} 